  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm --prefix api run dev\" \"npm --prefix web run dev\"",
    "build": "npm --prefix api run build && npm --prefix web run build",
    "test": "npm --prefix api run test && npm --prefix web run test",
    "lint": "eslint \"{api,web,shared}/**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier . --write",
    "typecheck": "npm --prefix api run typecheck && npm --prefix web run typecheck",
    "prepare": "husky",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down -v",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
